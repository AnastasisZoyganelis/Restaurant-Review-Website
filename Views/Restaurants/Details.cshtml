@model RestaurantReviewApp.Models.Restaurant

@{
    ViewData["Title"] = "Λεπτομέρειες Εστιατορίου";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-body">
            <h3 class="card-title">@Model.Name</h3>
            <h6 class="text-muted">@Model.Location</h6>
            <p class="card-text">@Model.Description</p>

            @if (Model.Reviews != null && Model.Reviews.Any())
            {
                var avg = Model.Reviews.Average(r => r.Rating);
                <p class="mt-2">
                    ⭐ Μέση Βαθμολογία: <strong class="text-success">@avg.ToString("0.0") / 5</strong>
                </p>
            }
            else
            {
                <p class="text-muted">Καμία αξιολόγηση ακόμα.</p>
            }

            <div class="mt-3">
                <a asp-action="Index" class="btn btn-outline-dark">⬅ Επιστροφή</a>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary">✏️ Επεξεργασία</a>
                }
            </div>
        </div>
    </div>

    <hr class="my-4" />

    <h4>Αξιολογήσεις</h4>

    @if (Model.Reviews != null && Model.Reviews.Any())
    {
        foreach (var review in Model.Reviews.OrderByDescending(r => r.DatePosted))
        {
            <div class="border rounded p-3 mb-3 bg-light">
                <div class="d-flex justify-content-between">
                    <strong>@review.UserName</strong>
                    <small class="text-muted">@review.DatePosted.ToShortDateString()</small>
                </div>
                <p class="mb-1">Βαθμολογία: <strong>@review.Rating / 5</strong></p>
                <p>@review.Comment</p>
                @if (review.UserName == User.Identity?.Name)
                {
                    <div class="text-end">
                        <a asp-controller="Reviews" asp-action="Edit" asp-route-id="@review.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a asp-controller="Reviews" asp-action="Delete" asp-route-id="@review.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </div>
                }
            </div>
        }
    }
    else
    {
        <p class="text-muted">Δεν υπάρχουν ακόμα αξιολογήσεις.</p>
    }

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <a asp-controller="Reviews" asp-action="Create" asp-route-restaurantId="@Model.Id" class="btn btn-primary mt-3">
            ➕ Γράψε Αξιολόγηση
        </a>
    }
    else
    {
        <p class="mt-3">
            <a asp-area="Identity" asp-page="/Account/Login">Συνδέσου</a> για να γράψεις αξιολόγηση.
        </p>
    }
</div>
